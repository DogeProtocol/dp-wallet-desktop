{
  "name": "dpwallet",
  "productName": "dpwallet",
  "version": "1.0.0",
  "description": "Doge Protocol Wallet",
  "main": "src/index.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "echo \"No linting configured\""
  },
  "author": "Doge Protocol Community",
  "license": "MIT",
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0"
  },
  "build": {
    "extraResources": [
      "assets/**",
      "theme/**",
      "js/**",
      "lib/**"
    ]
  },
  "files": [
    "js/**"
  ],
  "devDependencies": {
    "@electron-forge/cli": "^6.4.2",
    "@electron-forge/maker-deb": "^6.0.5",
    "@electron-forge/maker-rpm": "^6.0.5",
    "@electron-forge/maker-squirrel": "^6.0.5",
    "@electron-forge/maker-zip": "^6.0.5",
    "electron": "^23.3.13"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "src/assets/icons/app/icon"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "dpwallet",
            "iconUrl": "https://dogeprotocol.org/img/icon.ico",
            "setupIcon": "src/assets/icons/app/icon.ico"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ],
          "config": {
            "options": {
              "icon": "src/assets/icons/app/icon.png"
            }
          }
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {
            "options": {
              "icon": "src/assets/icons/app/icon.png"
            }
          }
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {
            "options": {
              "icon": "src/assets/icons/app/icon.png"
            }
          }
        }
      ]
    }
  }
}
